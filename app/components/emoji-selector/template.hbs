<div class="emoji-list-views">
  <div class="emoji-list">
    <div class="emoji-list-container">
      {{#each emojiList as |emoji|}}
        <div class="emoji-items">
          <div class="emoji-item emoji-char"> <span>{{emoji.char}}</span></div>
          <div class="emoji-item emoji-description">
            <div class="emoji-description-name"> {{emoji.name}} </div>
            <div class="emoji-description-code"> {{emoji.code}} </div>
            <div class="emoji-description-no"> {{emoji.no}} </div>
          </div>

          <div class="emoji-item emoji-category">
            <div class="category-item"> <input type="radio" name={{emoji.code}} id="people"> People </div>
            <div class="category-item"> <input type="radio" name={{emoji.code}} id="nature"> Nature </div>
            <div class="category-item"> <input type="radio" name={{emoji.code}} id="objects"> Objects </div>
            <div class="category-item"> <input type="radio" name={{emoji.code}} id="places"> Places </div>
            <div class="category-item"> <input type="radio" name={{emoji.code}} id="symbols"> Symbols </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="emoji-category-list">
    <div class="emoji-category-list-item people">
      <a href="#" target="_blank" class="emoji-category-list-label" {{action "toggleList" 'people'}}>People</a>
      {{emoji-listing showList=showPeopleList emojiList=emojiList}}
    </div>

    <div class="emoji-category-list-item nature">
      <a href="#" target="_blank" class="emoji-category-list-label" {{action "toggleList" 'nature'}}>Nature</a>
      {{emoji-listing showList=showNatureList emojiList=emojiList}}
    </div>

    <div class="emoji-category-list-item objects">
      <a href="#" target="_blank" class="emoji-category-list-label" {{action "toggleList" 'objects'}}>Objects</a>
      {{emoji-listing showList=showObjectsList emojiList=emojiList}}
    </div>

    <div class="emoji-category-list-item places">
      <a href="#" target="_blank" class="emoji-category-list-label" {{action "toggleList" 'places'}}>Places</a>
      {{emoji-listing showList=showPlacesList emojiList=emojiList}}
    </div>

    <div class="emoji-category-list-item symbols">
      <a href="#" target="_blank" class="emoji-category-list-label" {{action "toggleList" 'symbols'}}>Symbols</a>
      {{emoji-listing showList=showSymbolsList emojiList=emojiList}}
    </div>
  </div>
</div>

<div class="emoji-export">
  <button class="emoji-export-btn" type='button'>
    <span class="button-label"> Download </span>
  </button>
</div>